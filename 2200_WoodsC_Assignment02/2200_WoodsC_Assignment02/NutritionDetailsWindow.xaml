                <Label
                    Content="MonosatFat"
                    Grid.Column="2"
                    Grid.Row="7"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                />
                <Label
                    Content="PolyunsatFat"
                    Grid.Column="2"
                    Grid.Row="8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
