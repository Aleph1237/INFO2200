                    Grid.Column="0"
                    Grid.Row="8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                />

                <Label
                    Content="Fiber"
                    Grid.Column="0"
                    Grid.Row="9"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                />

                <!--start of the 3rd column -->

                <Label
                    Content="Cholesterol"
                    Grid.Column="2"
                    Grid.Row="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                />
